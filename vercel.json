{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "buildCommand": "npm install",
  "installCommand": "npm install -g pg",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/cron",
      "dest": "/controllers/cronJobController.js"
    }
  ],
  "crons": [{
    "path": "/cron",
    "schedule": "00 17 * * *"
  }]
}
